<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" 
	"http://www.hibernate.org/dtd/hibernate-configuration">
<hibernate-configuration>
	<session-factory>
		<property name=""></property>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/szecc</property>
		<property name="connection.username">szecc</property>
		<property name="connection.password">szecc</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="show_sql">true</property>
		<property name="hbm2ddl.auto">validate</property>
		
		<mapping resource="net/szecc/client/registration/Customer.hbm.xml" />
		
	</session-factory>
</hibernate-configuration>